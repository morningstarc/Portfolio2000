 <!-- Row -->
                <div class="row">
                    <!-- Column -->
                 

            <div class="col-md-6 main-section text-center">
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12 profile-header">
                        <h4><%=user.firstname%>  <%=user.lastname%></h4>
                    </div>
                </div>
                <div class="row user-detail">
