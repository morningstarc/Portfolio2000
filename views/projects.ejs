<!DOCTYPE html>
<html lang="en">

    <% include ./partials/header %>
 
</head>

<body id="page-top">

    <% include ./partials/nav %>

  <div id="wrapper">

    <% include ./partials/sidenav %>


    <div id="content-wrapper"> 

      <div class="container-fluid">



        <!-- Page Content -->
        <!-- Icon Cards-->
        <div class="row">
        <% for (const project of projects) {%>
          <div class="col-xl-4 col-sm-6 mb-4">
            <div class="card text-white bg-info o-hidden h-100">
            <div class="card-header"> <h5><%=project.name%></h5></div>
            <div class="card-body-icon">
                  <i class="far fa-file-code" style="font-size: 2em;"></i>
                  
                </div>
              <div class="card-body">
                 
                <i class="fas fa-info-circle"></i> Type: <%= project.type%><br />
                <i class="fab fa-github-square"></i> github: <%= project.github%><br />
                <i class="fas fa-link"></i> Link: <%= project.link%><br />
                <i class="fas fa-code"></i> Description: <%= project.description%></span>
             
                
              </div>
              <div class="card-footer bg-white">
              <div class="row">
              <div style="display: inline-block; float-left;">
              <form action="deleteProject" method="POST">
              <input type="hidden" name="_id" value="<%= project._id%>">
                <button type="sumbit" class="btn btn-sm btn-danger" role="button">Delete</button>
              </form>
              </div>
              <div style="width: 75%"></div>
              <div style="display: inline-block; float-right;">
              <form action="updateProject" method="POST">
                 <a href="/updateProject/?_id=<%=project._id%>"type="button" class="btn btn-sm btn-warning" role="button">Edit</a>
              </form>
              </div>
              </div>
              </div>
            </div>
          </div>
        <% } %>
         
      </div>
      <!-- /.container-fluid -->
   
    <% include ./partials/footer %>
    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>



    <% include ./partials/scripts %>

  <!-- Custom scripts for all pages-->
  <script src="js/sb-admin.min.js"></script>

</body>

</html>
