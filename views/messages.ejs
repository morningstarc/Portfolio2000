<!DOCTYPE html>
<html lang="en">

<% include ./partials/header %>

</head>

<body id="page-top">

    <% include ./partials/nav %>

    <div id="wrapper">

        <% include ./partials/sidenav %>


        <div id="content-wrapper">
            <!-- background image -->

            <div class="container-fluid">
             <!-- Page Content -->
<div class="row">
                    <!-- column -->
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-block">
                                <h4 class="card-title">Messages - <%if(where == "inbox") {%> Inbox <%} else { %> Sent <% } %>  </h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                               
                                                <th>From</th>
                                                <th>Title</th>
                                                <th>Message</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        <% for(const message of messages) { %>
                                            <tr>
                                                <td><%= message.senderName %></th>
                                                <td><%= message.subject %></td>
                                                <td><%= message.message %></td>
                                                <td>
                                                <%if(where == "inbox") {%> 
                                                <a href="/uploadMessage?<%=message.sender%>" class="btn btn-warning btn-sm">Reply</a>
                                                <%}%>
                                                </td>
                                            </tr>
                                        <%}%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


               
                
       
 

      </div>
      <!-- /.container-fluid -->
   
    <% include ./partials/footer %>
            </div>
            <!-- /.content-wrapper -->

        </div>
        <!-- /#wrapper -->

      



        <% include ./partials/scripts %>


</body>

</html>